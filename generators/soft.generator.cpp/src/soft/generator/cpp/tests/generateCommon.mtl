[comment encoding = UTF-8 /]
[module generateCommon('http://www.eclipse.org/emf/2002/Ecore')/]

[query public getOutputDirectory( aPackage : EPackage ) : String = 
    let property : OclAny = getProperty('tests.output.dir') in 
    if property.oclIsUndefined() or property = '' then 
        'tests/'.concat( aPackage.name ).concat('.tests')
    else 
        property 
    endif
/]

[query public getMockName( aClass : EClass ) : String =  'Mock'.concat( if ( aClass.name.first(1) = 'I' or aClass.name.first(1) = 'E' ) then aClass.name.substring(2) else aClass.name endif )/]
